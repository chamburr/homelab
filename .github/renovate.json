{
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":disableDependencyDashboard",
    "github>chamburr/homelab//.github/renovate/auto-merge",
    "github>chamburr/homelab//.github/renovate/commit-message",
    "github>chamburr/homelab//.github/renovate/pr-label",
    "github>chamburr/homelab//.github/renovate/regex-manager"
  ],
  "onboarding": false,
  "requireConfig": "optional",
  "timezone": "Asia/Singapore",
  "suppressNotifications": ["prIgnoreNotification"],
  "prBodyTemplate": "{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}",
  "rebaseWhen": "conflicted",
  "platform": "github",
  "username": "chamburr-bot[bot]",
  "gitAuthor": "chamburr-bot <113156419+chamburr-bot[bot]@users.noreply.github.com>",
  "repositories": ["chamburr/homelab"],
  "flux": {
    "fileMatch": ["^kubernetes/.+\\.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["^kubernetes/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["^kubernetes/.+\\.yaml$"]
  }
}
